.container.messages-page
  .row-fluid
    .span3.pull-left
      %div{:style => "margin-top: 60px"}
      %div{:class => "well info"}
        %h3{:class => "menu-messages founder-all", :style => "background: #81C263"}
          = link_to "ALL PROJECT FUNDERS", project_admin_project_project_founder_path(@project.id), remote: true, style: "font-size: 10px"
          .arrow
        %h3{:class => "menu-messages sponsor-type"}
          = link_to "PROJECT SPONSORS", "/project_admin/projects/#{@project.id}/project_founder?type=sponsor", remote: true, style: "font-size: 10px"
          .arrow
        %h3{:class => "menu-messages individuals-type"}
          = link_to "INDIVIDUAL CONTRIBUTORS", "/project_admin/projects/#{@project.id}/project_founder?type=individual", remote: true, style: "font-size: 10px"
          .arrow
        - if any_project_donors_or_sponsors?(@project)
          %h3{:class => "menu-messages"}
            = link_to 'Download Donor/Sponsor List', project_admin_project_xls_path(@project), method: :post, style: "font-size: 9px"
            .arrow
    .span9.pull-right.founder-content
      = render "founder_content"
