= stylesheet_link_tag "admin_project"

#fb-root
:javascript
  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/id_ID/all.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));

  window.fbAsyncInit = function() {
    FB.init({
    appId : '128236094027667', // App ID
  });

    // showCommentBox();
  };

  filepicker.setKey('ArmO0TLVTkyCaJkQmBNfqz'); // hardcode because js from flipicker can't called, please set your own


.full-width.banner
  .container
    .span3
      %h4.white-text= @project.title
      %h5 #{@project.city}, #{@project.state}

    .span3
      %h6 Current Amount Funded
      %h2= number_to_currency(amount_funded(@project.id), :precision => 0)
      of #{number_to_currency(@project.goal, :precision => 0)}

    .span2
      %h6.white-text Project Sponsors
      %h2= @sponsor_count

    .span2
      %h6.white-text Individual Contributions
      %h2= @donations.count

    .span2
      %h6.white-text Days Remaining
      / %h2 #{time_left(@project.duration, @project.approval_date)}

.cf

.menu-project
  .container
    %ul
      %li{:style => "margin-left: 0"}
        = link_to "Project Overview", project_admin_project_overview_path(@project.id), remote: true
      %li
        = link_to "Manage Project", project_admin_project_manage_path(@project.id), remote: true
      %li
        = link_to "Project Funders", "#tabs-3"
      %li
        = link_to "Project Messages", project_admin_project_messages_path(@project.id), remote: true

.main-content{:style => "margin-top:200px;"}
  = render "overview"
