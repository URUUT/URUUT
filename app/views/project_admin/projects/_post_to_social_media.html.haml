%div
  %h2.title POST A MESSAGE TO SOCIAL MEDIA
  .post-to-social.well{:style => "float:left"}
    %div.row
      .span6
        %span
          FACEBOOK
        %p Post a message on your facebook page
        = link_to image_tag("fb-post.png"), "javascript:shareFb()"
      .span6
        %span
          TWITTER
        %p Tweet to your Twitter followers
        = link_to image_tag("tw-post.png"), "https://twitter.com/share", "data-url" => root_url, "target" => "blank"
    %div.row
      .span6
        %span
          LINKEDIN
        %p Post a message on Linkedin
        = link_to image_tag("li-post.png"), "https://www.linkedin.com/cws/share?url=#{root_url}"

:javascript
  var shareButton = function(){
    window.open('https://www.facebook.com/sharer/sharer.php?u=' + location.href, 'sharer', 'width=626,height=436');
    };
