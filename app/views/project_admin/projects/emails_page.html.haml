= stylesheet_link_tag "admin_project"

#fb-root
:javascript

  filepicker.setKey('#{Settings.filepicker.api_key}');

.full-width.banner
  .container
    .span3
      %div{:style => "border-right: 1px solid #464646"}
        %h4.project-tittle
          = @project.project_title
        %h5.project-location
          #{@project.city}, #{@project.state}

    .span3
      %div{:style => "border-right: 1px solid #464646"}
        %h6
          Current Amount Funded
        %h2.highlighted-value
          = number_to_currency(@total_fundings[:total_amount], :precision => 0)
        .of-italic
          of #{number_to_currency(@project.goal, :precision => 0)}

    .span2
      %div{:style => "border-right: 1px solid #464646"}
        %h6
          Project
          %br
          Sponsors
        %h2.highlighted-value
          = @sponsor_count

    .span2
      %div{:style => "border-right: 1px solid #464646"}
        %h6
          Individual
          %br
          Contributions
        %h2.highlighted-value
          = @donations.count

    .span2
      %div{:style => ""}
        %h6
          Days
          %br
          Remaining
        %h2.highlighted-value
          #{campaign_days_left(@project)}

.cf

.menu-project
  .container
    %ul.clearfix.admin-menu
      %li.overview{:style => "margin-left: 0"}
        = link_to "Project Overview", project_admin_project_path(@project.id), class: "sub-menu-project"
        .nav-arrow
      %li.manage
        = link_to "Manage Project", project_admin_project_manage_path(@project.id), class: "sub-menu-project manage", remote: true
        .nav-arrow
      %li.funder
        = link_to "Project Funders", project_admin_project_project_founder_path(@project.id), class: "sub-menu-project founder", remote: true
        .nav-arrow
      %li.message.active
        = link_to "Project Messages", project_admin_project_messages_path(@project.id), class: "sub-menu-project messages active"
        .nav-arrow

.main-content{:style => "margin-top:200px;"}
  .container.messages-page
    .row-fluid
      .span3.pull-left
        %div{:style => "margin-top: 60px"}
        %div{:class => "well info"}
          %h3{:class => "menu-messages social-media"}
            = link_to "POST TO SOCIAL MEDIA", project_admin_project_post_to_social_media_path(@project.id), remote: true
          %h3{:class => "menu-messages emails active"}
            = link_to "EMAILS", project_admin_project_emails_page_path(@project.id)
            .arrow
      .span9.pull-right.messages-content
        = render "emails"

%section#noticeSuccess.modal.hide.fade
  .modal-header{style: "height: 17px;"}
    %button.close.closes{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
      Close X
    %h3#myModalLabel.tittle.title-modal{:style => "margin-bottom: 0;"}
  .modal-body
    %p.messages-content-modal
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal", style: "float: none; margin: 0 auto;"} Ok

