%table.table.table-striped
  - @founders.each do |founder|
    - if founder.type_founder.eql?("sponsor")
      %tr
        %td= image_tag "#{founder.logo}/convert?fit=scale&height=37&width=37"
        %td= truncate(founder.name, length: 17)
        %td= "#{number_to_currency(founder.cost, precision: 0)}"
        %td= truncate("#{founder.sponsorship_level.name} sponsor", length: 17)
        %td= founder.updated_at.strftime("%m/%d")
    - else
      %tr
        %td= image_tag avatar_project_admin(founder.user.avatar), style: "width:37px"
        %td= truncate([founder.user.first_name, founder.user.last_name].join(" "), length: 17)
        %td= "#{number_to_currency(founder.amount, precision: 0)}"
        %td= truncate(founder.perk_name, length: 17)
        %td= founder.updated_at.strftime("%m/%d")

= paginate @founders, remote: true
