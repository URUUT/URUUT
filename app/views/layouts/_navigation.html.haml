= link_to "Venture Bridge", root_path, :class => 'brand', :style => "line-height:32px;"
%ul.nav{:style => "float:left;margin-left:35px;"}
  %li
    = link_to "Discover", pages_discover_path, :style => "line-height:32px"
%ul.nav{:style => "float:right"}
  - if user_signed_in?
    %li
      %a
        = image_tag(get_gravatar(current_user.email), :style => "vertical-align:middle")
        = current_user.name
        = image_tag('down-arrow.png')
      %div.dropdown
        %div
          %h5 My Account
          %ul
            %li
              = link_to('Profile', users_profile_path)
            %li
              = link_to('Logout', destroy_user_session_path, :method=>'delete')

        / -if current_user.municipality #Add this back in after testing
        %div
          %h5 My Projects
          %ul
            %li
              = link_to('New Project', new_project_path)
            %li
              = link_to('Show Projects', projects_path)
  - else
    %li{:style => "top:5px"}
      = link_to('Login', new_user_session_path)
  - if user_signed_in?
    / %li
    /   = link_to('Edit account', edit_user_registration_path)
  - else
    %li{:style => "top:5px;"}
      = link_to('Sign up', new_user_registration_path)