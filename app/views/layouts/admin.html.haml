%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Myapp"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag "application", "default/application", "http://fonts.googleapis.com/css?family=Ubuntu:300,400,500",  "http://fonts.googleapis.com/css?family=Lato:300,400,700,400italic", :media => "all"
    = javascript_include_tag "jquery"
    = airbrake_javascript_notifier
    = csrf_meta_tags
    = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    #wrap
      .container-fluid
        .row-fluid
          .span12
            = yield

