:css
  input[type="text"], input[type="email"], input[type="date"], input[type="password"] {
  width: 100% !important;
  }


.span8{:style => "margin-top:35px;"}
  %h4 Create an account
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well"}) do |f|
    = devise_error_messages!

    .req-legend
      *Required
    .row
      .span3.well-half
        = f.label :first_name, "First Name*", class: "label-green"
        = f.text_field :first_name
      .span3.well-half
        = f.label :last_name, "Last Name*", class: "label-green"
        = f.text_field :last_name

    %div
      = f.label :email, "Email*", class: "label-green"
      = f.email_field :email

    - unless session["devise.provider"] && session["devise.uid"]
      .row
        .span3.well-half
          = f.label :password, "Password*", class: "label-green"
          = f.password_field :password

        .span3.well-half
          = f.label :password_confirmation, "Password Confirmation*", class: "label-green"
          = f.password_field :password_confirmation

    %hr{style: "margin: 0 -19px; background: #e0e0e0;"}
    %div.inline
      = button_tag(type: 'submit', class: "btn btn-primary", id: "project-submit", style: "margin:20px 0 0;float:left;") do
        Create My Account
        = image_tag('arrow.png')

      %p{:style => "color:#b6b6b4;float:left;width:270px;margin-top:25px;margin-left:20px;font-family:arial;"}
        By creating an account, you agree to our
        = link_to "terms of use", terms_pages_path
        and
        = link_to "privacy policy", privacy_pages_path

  / = render "devise/shared/links"

= render "social-login"

:javascript
  $('#new_user').validate({
    rules: {
      "user[email]":{
        required: true,
        email: true
      },
      "user[first_name]":{
        required: true,
      },
      "user[last_name]":{
        required: true,
      },
      "user[password]":{
        required: true,
        minlength: 6
      },
      "user[password_confirmation]":{
        required: true,
        minlength: 3
      }
    }
  });
