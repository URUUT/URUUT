:css
  input[type="text"], input[type="email"], input[type="date"], input[type="password"] {
  width: 100% !important;
  }


.span8{:style => "margin-top:35px;"}
  %h4 Create an account
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well"}) do |f|
    = devise_error_messages!
    .row
      .span3
        = f.label :first_name
        = f.text_field :first_name
      .span3
        = f.label :last_name
        = f.text_field :last_name

    %div
      = f.label :email
      = f.email_field :email

    - unless session["devise.provider"] && session["devise.uid"]
      .row
        .span3
          = f.label :password
          = f.password_field :password

        .span3
          = f.label :password_confirmation
          = f.password_field :password_confirmation

    %div.inline
      = button_tag(type: 'submit', class: "btn btn-primary", id: "project-submit", style: "margin:20px 0 0;float:left;") do
        Create My Account
        = image_tag('arrow.png')

      %p{:style => "color:#b6b6b4;float:left;width:270px;margin-top:25px;margin-left:20px;font-family:arial;"}
        By creating an account, you agree to our
        = link_to "terms of use", terms_pages_path, :target => "_blank"
        and
        = link_to "privacy policy", privacy_pages_path, :target => "_blank"

  / = render "devise/shared/links"

= render "social-login"
