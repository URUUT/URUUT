- if projects  - projects.each do |p|    .project.project_item      .project_image        = link_to project_path(p) do          = image_tag (p.large_image.blank?)? default_image_url(350, 150) : "#{p.large_image}/convert?w=300&h=150&quality=65", :class => "project_image"        .project-img-layer.project-fund.plus-btn          %a.btn{:href => "#{project_transparency_workroom_index_path(p)}"}            Transparency Workroom          - if campaign_days_left(p) <= 0            %input#success-fund{:name => "success", :type => "hidden", :value => "success", class: "success"}              %span      .content        .cont-desc          %h3= link_to p.project_title, project_path(p)          %p.short-description= truncate(p.title, length: 150)        .location.clearfix          = image_tag "pin.png", :class => "marker"          %span #{p.city}, #{p.state}          - if p.partial_funding            %span.pull-right              = image_tag 'pf-logo.png', class: "tax-deductible", "data-toggle" => "tooltip", title: "Partial funding"          - if tax_deductible?(p)            %span.pull-right              = image_tag 'td-logo.png', class: "tax-deductible", "data-toggle" => "tooltip", title: "Donations Are Tax Deductible"      .funding        %div{:class => "progressbar_project", data: { value: p.percent_to_goal } }        %ul          %li.funded            %p              = amount_converter(p.total_funded)              %span of              = amount_converter(p.goal)            %h5.light_text Funded          %li.days-left            - if campaign_days_left(p) > 0              %p.days #{campaign_days_left(p)}            - else              %p.days 0            %h5.time-left Days Left- else  %h3 Sorry, No Projects To Show