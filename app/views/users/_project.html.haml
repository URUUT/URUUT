- if projects  - projects.each do |p|    - if p.live == 1      %div.project        .project-img          -if !p.large_image.blank?            = link_to image_tag("#{p.large_image}", :class => "project-image"), project_path(p.id)          - else            = link_to image_tag("http://placehold.it/350x150", :class => "project-image"), project_path(p.id)          .project-img-layer.project-fund.plus-btn            %a.btn{:href => "#"}              Transparency Workroom            - if time_left(p.duration, p.approval_date) <= 0              %input#success-fund{:name => "success", :type => "hidden", :value => "success", class: "success"}                %span        .content          .cont-desc            %h3= link_to p.title, project_path(p.id)            %p.short-description= truncate(p.about, length: 150)          .location.clearfix            = image_tag "pin.png", :class => "marker"            %span #{p.city}, #{p.state}            - if p.organization_classification.eql?("170(c)(1)") || p.organization_classification.eql?("501(c)(3)")              %span.pull-right                = image_tag 'td-logo.png', class: "tax-deductible", "data-toggle" => "tooltip", title: "Donations Are Tax Deductable"        .funding          %div{:class => "progressbar#{p.id}_user"}          %ul            %li.funded              %p                = number_to_currency(totalsponsor(p), :precision => 0)                %span of                = amount_converter(p.goal)              %h5 Funded            %li.days-left              %p.days #{time_left(p.duration, p.approval_date)}              %h5.time-left Days Left        :javascript          $(document).ready(function() {            $('#projects-funded').change(function(){              var status = $(this).val();              $.ajax({                url: "/users/get_complete_project",                data: {                    user_id: "#{@user.id}",                    status: status                  }              })            })          })          $('.progressbar#{p.id}_user').progressbar({          value: #{percentage_sponsor(p)}          });          $('.progressbar#{p.id}_user > div').css({ 'background': '#70bf4c' });          $('.tax-deductible').tooltip({            placement: "top",            trigger: "hover"          });- else  %h3 Sorry, No Projects To Show