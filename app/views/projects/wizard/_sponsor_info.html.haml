.step-container{"data-id" => "sponsor-info"}
  = form_for(project, :html => {:class => "sponsor-info span8 well", :multipart => true}) do |f|

    - if project.errors.any?
      #errorExplanation
        %h2 #{pluralize(project.errors.count, "error")}
        %ul
          - project.errors.full_messages.each do |msg|
            %li #{msg}

    %h4.title
      YOUR RUUTS
      %span.italic (Basic Information)

    %div
      = f.label :organization, "Organization/Business Name*", class: "label-green"
      = f.text_field :organization, :required => true, class: "span8"

    %div.inline
      = f.label :organization_type, "Organization Type*", class: "label-green"
      = f.select :organization_type, options_for_select(project_org_type, @project.organization_type), :required => true

    %div.inline{:style => "margin-left:20px;"}
      = f.label :organization_class, "How Are You Organized?*", class: "label-green"
      = f.select :organization_classification, options_for_select(project_org_class, @project.organization_classification), :required => true

    %div
      = f.label :address , "STREET ADDRESS*", class: "label-green"
      = f.text_field :address, :required => true, class: "span8"

    %div.inline
      = f.label :city, class: "label-green"
      = f.text_field :city, :required => true, class: "span4"

    %div.inline{:style => "margin-left:25px;"}
      = f.label :state, class: "label-green"
      = f.select :state, options_for_select(us_states, project.state), :required => true

    %div.inline{:style => "margin-left:25px;"}
      = f.label :zip, "Zipcode", class: "label-green"
      = f.text_field :zip, :required => true, class: "span2"

    %div
      = f.label :website, :class => "label-green" do
        WEBSITE ADDRESS
        %span.italic (Format: www.mysite.com)
      = f.text_field :website, :required => true, class: "span8"

    %div.inline
      = f.label :twitter_handle, "Twitter Account", class: "label-green"
      = f.text_field :twitter_handle, :required => true, class: "span4"

    %div.inline{:style => "margin-left:30px;"}
      = f.label :facebook_page, "Facebook Page", class: "label-green"
      = f.text_field :facebook_page, :required => true, class: "span4"

    = hidden_field_tag "step", "first"

    %div
      %p.label-green{:style => "font: bold 12px/12px 'Proxima Nova', arial, sans-serif;text-transform: uppercase;"}
        Payment With Stripe
      %p{:style => "font:normal 13px/19px 'Proxima Nova';"} An account with Stripe, our payment provider, is required for processing credit card transactions and receiving funds. If you already have an account, you can sign in as a returning customer.
      = link_to "https://connect.stripe.com/oauth/authorize?scope=read_only&response_type=code&client_id=ca_1kjvzNoI5Jbkcb1RTv4vtoxljRUueUNZ", :target => "_blank", :class => "stripe-connect" do
        = image_tag "stripe-connect.png"


      %input{:type => 'hidden', :value => "#{@connected}", :id => "connected", :required => true}

        %hr{:style => "background: #e0e0e0; margin-left: -19px; margin-right: -19px;"}

        %div
          = f.submit "Save And Continue", :class => "btn", :id => "project-submit"

  .span4{:style => "margin-top:155px;"}
    %h4.title{:style => "margin-bottom:5px;"} SET UP GUIDE
