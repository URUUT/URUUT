.platinum-level-container
  .container
    .row
      - if @project_sponsors.include?(1)
        .span8
          = image_tag @project_sponsors[1].last.logo, :class => "sponsor-logo img-polaroid"
          .sponsor-info
            %h5
              Platinum Level Sponsor
            %h3
              - @project_sponsors[1].last.name
            %a.sponsor-link{:href => "#"}
              www.sponsor-link.org
        .span4
          %p
