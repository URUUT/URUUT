- @projects.each do |p|
	%div.project{:style => "width:230px;height:350px;padding:10px;float:left;border:1px solid #efefef;margin:0 20px 20px 0;overflow:hidden;"}
		/ = image_tag("#{p.image.url(:thumb)}", :style => "width:230px !important;height:180px !important;")
		 
		%h3{:style => "width:230px;word-wrap:break-word;"}
			= link_to p.title, project_path(p.id)

		%p by #{current_user.name}

		%div{:style => "height:20px;position:relative;", :class => "progressbar#{p.id}"} 
			%span{:style => "position:absolute;dislay:block;text-align:center;width:100%"} #{number_with_delimiter(percent_funded(p.id).round(0), :delimiter => ',')}%
		%h4 Goal
		%p= number_to_currency(p.goal, :precision => 0)
		%h4 Days Left
		%p #{time_left(p.duration).to_i} Days
		/ = percent_funded(p.id)
		= link_to "Edit Project", edit_project_url(p.id)
		:javascript
			$('.progressbar#{p.id}').progressbar({
				value: #{percent_funded(p.id)}
			});