- if @need_doctype
  :css
    footer form#email-sign-up input {
      display: inline;
      /* height: 19px !important; */
    }
    footer form#email-sign-up button {
      margin-left: -5px;
      margin-top: -5px;
      padding: 0;
      height: 40px;
      width: 35px;
    }

:javascript
  $(".new_newsletter").validate({
    rules: {
      "newsletter[email]": {
        required: true,
        email: true
      }
    },
    errorPlacement: function(error, element) {
      error.appendTo(element.parent().find(".error-container"));
    }
  });

%footer
  .container.cf
    %ul
      %li
        = link_to fundraising_pages_path do
          %h6 Features
      %li
        = link_to choose_plan_pages_path do
          %h6 Pricing
      %li
        = link_to browse_projects_path do
          %h6 Fund Projects
      %li
        = link_to about_pages_path do
          %h6 About URUUT

    %ul
      %li
        = link_to contact_pages_path do
          %h6 Contact
      %li
        = link_to media_pages_path do
          %h6 Media Room
      %li
        = link_to privacy_pages_path do
          %h6 Privacy Policy
      %li
        = link_to terms_pages_path do
          %h6 Terms of Use

    %ul
      %li
        %h6 Find Us On
      %li
        = link_to "","http://www.facebook.com/get.ruuted", {:class => "fb", :target => "_blank"}
        = link_to "","http://www.twitter.com/uruut", {:class => "tw", :target => "_blank"}
        = link_to "", "http://www.linkedin.com/company/uruut", {:class => "lkd", :target => "_blank"}
        = link_to "", "https://plus.google.com/114477089797728702899/posts", {:class => "gplus", :target => "_blank"}

    %ul
      %li
        %h6 Subscribe to Uruut News
        = form_for Newsletter.new, :remote => true, :html => { :id => "email-sign-up" } do |f|
