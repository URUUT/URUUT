- if @need_doctype
  :css
    footer form#email-sign-up input {
      display: inline;
      /* height: 19px !important; */
    }
    footer form#email-sign-up button {
      margin-left: -5px;
      margin-top: -5px;
      padding: 0;
      height: 40px;
      width: 35px;
    }

:javascript
  $(".new_newsletter").validate({
    rules: {
      "newsletter[email]": {
        required: true,
        email: true
      }
    },
    errorPlacement: function(error, element) {
      error.appendTo(element.parent().find(".error-container"));
    }
  });

