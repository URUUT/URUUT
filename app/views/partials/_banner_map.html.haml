.full-width.texture
  .container
    = form_tag search_projects_path, method: "get", class: "project-filter" do
      %div
        = image_tag "mag-glass.png"
        %h3 DISCOVER PROJECTS
      .span12
        .row
          .category.dropdown
            %label PROJECT CATEGORY:
            %section.selectParent
              %select{:id => "category", :name => "category", class: "styledSelect"}
                %option All Categories
                = render "partials/project_filters", :type => :category
          .location.dropdown
            %label PROJECT LOCATION:
            %section.selectParent
              %select{:id => "location", :name => "city", class: "styledSelect"}
                %option All Cities
                = render "partials/project_filters", :type => :city
          .keyword.dropdown{style: "margin-top: -12px;"}
            %label{style: "margin-top: 0;margin-bottom: 20px;"} KEYWORD SEARCH
            %input{:type => 'text', :id => 'keyword', :name => "keyword", :placeholder => "Keyword...",
              :value => params[:keyword]}
              %button.btn.btns{:type => "submit"}
                %span

:javascript
  $(function(){
    $("#category").on("change", function(){
      $.ajax({
        url: "/pages/search_category_or_location?category=" + $(this).val() + "&city=" + $("#location").val()
      });
    });

    $("#location").on("change", function(){
      $.ajax({
        url: "/pages/search_category_or_location?city=" + $(this).val() + "&category="+ $("#category").val()
      })
    });
  });
