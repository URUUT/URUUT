.container
  .row-fluid{style: "margin-top: 30px;"}
    .span9
      %h4.tittle{style: "padding-bottom: 10px;"} THANK YOU!
      %h4.label-green Congratulations!
      %p{:style => "letter-spacing: 1px;"} You are now an official sponsor to #{@project.project_title}. Now it's time to spread the word
      %div
        = link_to image_tag("fb-share.png",style: "width: 150px", class: "fb-share-button"), "https://www.facebook.com/dialog/feed?app_id=#{Settings.facebook.api_key}&link=#{project_url(@project.id)}&picture=#{@project.large_image}&name=#{url_encode(@project.project_title)}&caption=#{url_encode(@project.category)}&description=#{url_encode("I'm RUUTing for this community project and you should, too. Join me by making a donation on @URUUT’s collaborative funding platform. Let's make a difference in our community!")}&redirect_uri=#{thank_you_donations_url}", style: "display: block; float: left;", target: "_blank"
        = image_tag "tw-share.png", style: "cursor:pinter; margin-left: 2%; display: block; float: left; width: 150px; cursor:pointer", class: "tw-share"
        = link_to image_tag("ml-share.png", style: "width: 150px"), "javascript:void(0)", style: "margin-left: 2%; display: block; float: left;", class: "cs_import"
        %span.link-short{:style => "font-weight:bolder; font-size: 18px !important; margin-left: 2%"}
          = @project.bitly

    .span3.pull-right.messages-content
      %h4.title Details
      .well.pull-left{style: "margin-left: 0;"}
        %h5.label-green{style: "margin-bottom: 0;"} Payment amount
        %p #{number_to_currency(@donation.amount, :precision => 0)}
        %h5.label-green{style: "margin-bottom: 0;"} Your perk
        %h6{style: "margin: 0;"}
          = @perk.name
        %p= @perk.description
        %p{style: "color: #e0e0e0; font-size: 11px;"}
          %span{style: "font-family: 'Proxima Nova Semi', sans-serif;"}
            Estimated delivery :
          13 October 2013

