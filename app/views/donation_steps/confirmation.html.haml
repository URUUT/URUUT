.container.donations{:style => "margin-top:30px;"}
  .span8
    %h3.title Review your contribution
    %p{:style => ""} By confirming your contribution, you agree to Uruut.com's privacy policy and terms of use.
    .donation
      .well{:style => "border:1px solid #e9e9e9;padding:0;margin-top:20px;"}
        %div{:style => "border-top:1px solid #e9e9e9;border-bottom:1px solid #e9e9e9;padding:10px 20px;font-size:12px;font-family:'Proxima Nova';color:#b6b6b4;margin:0;"}
          %h5{:style => "margin: 0px;"} Project name
          %h3{:style => 'color:#70bf4c;line-height:100%;margin:10px 0 0;'}= @project.title
          %p
            = image_tag "marker.jpg"
            %span{:style => "font:bold 12px/12px 'Proxima Nova Bold';text-transform:uppercase;"}= @project.location
        %div{:style => "float:left;padding-left:20px;display:inline-block;height:115px;width:212px;border-right:1px solid #e9e9e9;margin-right:20px;"}
          %h6{:style => "line-height:100%;margin-bottom:10px;margin-top:20px;margin-bottom:15px;"} Seed Amount
          %span{:style => "font-size:52px;color:#70bf4c;font-family:'Proxima Nova Bold';line-height:100%"}= number_to_currency(@donation.amount, :precision => 0)
        %div{:style => "float:left;display:inline-block;width:340px;padding-right:20px;height:auto"}
          %h6{:style => "line-height:100%;margin-bottom:10px;margin-top:20px"} Your Perk
          %h3{:style => 'font-size:20px; color:#70bf4c;line-height:100%;margin:0;'}= @perk.name
          %span{:style => "font-size:12px;font-family:'Proxima Nova';"}= @perk.description
        .cf

  .span4
    %h3.title Payment information
    .well.green-headered{:style => "border:none;"}
      %h5 Payment using
      %p
        = @card_type
        ending in
        %strong= @card_last4
      %h5 Payment amount
      = number_to_currency(@donation.amount, :precision => 0)
      %hr
      %p.grey
        %strong Note:
        Your card will not be charged when you make your investment! You will only be charged if this campaign reaches its funding goal. All transactions are processed through a secure third-party payment processor.
      %hr
      = form_for @donation do |f|
        %button.btn.btn-primary.btn-block{:type => "submit"}
          Confirm
          %span

- if @donation.errors.any?
  .error_messages
    %h2
      = pluralize(@donation.errors.count, "error")
      prohibited this subscription from being saved:
    %ul
      - @donation.errors.full_messages.each do |msg|
        %li= msg
