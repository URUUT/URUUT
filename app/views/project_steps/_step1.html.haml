%ul.breadcrumbs
  %li.active
    = link_to "Step 1", '/project_steps/step1'
  %li 
    = link_to "Step 2", '/project_steps/step2'
  %li 
    = link_to "Step 3", '/project_steps/step3'
  %li 
    = link_to "Step 4", '/project_steps/step4'

= form_for(@project, :url => wizard_path, :html => {:class => "span8 well", :multipart => true}) do |f|

  - if @project.errors.any?  
    #errorExplanation  
      %h2 #{pluralize(@project.errors.count, "error")}  
      %ul  
        - @project.errors.full_messages.each do |msg|  
          %li #{msg}  

  %title Create Your Project

  %div
    = f.label :organization
    = f.text_field :organization, :required => true

  %div
    = f.label :address 
    = f.text_field :address, :required => true

  %div
    = f.label :city 
    = f.text_field :city, :required => true

  %div
    = f.label :state
    = f.select :state, options_for_select(us_states, @project.state), :required => true

  %div
    = f.label :zip
    = f.text_field :zip, :required => true

  %div
    = f.label :website 
    = f.text_field :website, :required => true

  %div
    = f.label :twitter_handle 
    = f.text_field :twitter_handle, :required => true

  %div
    = f.label :facebook_page
    = f.text_field :facebook_page, :required => true

  %div
    = f.submit "Save And Continue", :class => "btn", :id => "project-submit"
