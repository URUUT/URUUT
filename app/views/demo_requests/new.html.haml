:css
  .full-with {
    width: 100% !important;
  }
  input[type="radio"]{
    display: inline-block;
    float: left;
  }
  .inline{ width: 100%; }
  .inline-field{
    display: inline-block;
    width: 60px;
  }
  .inline-field label{ width: auto; }
  label{
    width: 90%;
    margin-left: 5px; 
    margin-bottom: 10px;
    display: inline-block;
    font-family: "Proxima Nova Semi";
    font-size: 10pt;
    line-height: 14pt;
  }
  .label-green{
    font-family: "Proxima Nova Bold";
    margin-left: 0;
    width: 130%;
  }
  .error-box {
    display: none;
    background: rgba(245, 11, 11, 0.69);
    color: #fff;
    padding: 7px;
    font-weight: bold;
  }

.span8{style: "margin-top:35px;"}
  %h4.step_name DEMO REGISTRATION (STEP 1 OF 2)
  %h4.step_name{ style: 'display:none;' } DEMO REGISTRATION (STEP 2 OF 2)
  = form_for @demo, url: demo_request_path , html: {class: "well"} do |f|
    .error-box
      Please complete all field
    #step1
      %h4 Tell us about you.
      %br
      .row
        .span3.well-half
          = f.label :first_name, class: "label-green" do
            First Name*
            %span.error-container
          = f.text_field :first_name, class: 'full-with'
        .span3.well-half
          = f.label :last_name, class: "label-green" do
            Last Name*
            %span.error-container
          = f.text_field :last_name, class: 'full-with'

      %div
        = f.label :organization, class: "label-green" do
          %span.error-container
          Organization name*
        = f.text_field :organization, class: 'full-with'

      %div
        = f.label :email, class: "label-green" do
          %span.error-container
          Email address*
        = f.email_field :email, class: 'full-with'

      .row
        .span3.well-half
          = f.label :phone, class: "label-green" do
            Phone number*
            %span.error-container
          = f.text_field :phone, id: "user_pass", class: 'full-with'

      %div.inline
        = link_to '#', id: "next-step" do
          .btn{ style: 'margin:0; width:235px;'}
            Next Step ►

    #step2{ style: 'display:none;' }
      %h4 Tell us about your organization.
      %br
      .row
        .span6
          = f.label :founded_date, class: "label-green" do
            IN WHAT YEAR WAS YOUR ORGANIZATION FOUNDED?*
            %span.error-container
          = f.text_field :founded_date, style: 'width:55%;'
      .row
        .span6
          = f.label :non_profit, class: "label-green" do
            ARE YOU A NONPROFIT ORGANIZATION?*
            %span.error-container
          %div.inline-field
            = f.radio_button :non_profit, Demo::NON_PROFIT[:yes]
            = f.label :non_profit, "Yes"
          %div.inline-field
            = f.radio_button :non_profit, Demo::NON_PROFIT[:no]
            = f.label :non_profit, "No"
          %br
      .row
        .span7
          = f.label :organization_description, class: "label-green" do
            PLEASE DESCRIBE YOUR ORGANIZATION, IT’S MISSION, AND CAUSES*
          = f.text_area :organization_description, class: 'full-with', rows: 5
      %br

      = render partial: 'demo_requests/money_raised_yearly', locals: { f: f }
      %br
      = render partial: 'demo_requests/current_fundraising_activities', locals: { f: f }
      %br
      = render partial: 'demo_requests/type_of_accepted_donations', locals: { f: f }
      %br
      = render partial: 'demo_requests/type_of_donors_accepted', locals: { f: f }
      %br
      = render partial: 'demo_requests/sponsorship_program', locals: { f: f }
      %br
      = render partial: 'demo_requests/regarding_crowdfunding', locals: { f: f }
      %br
      = render partial: 'demo_requests/crowdfunding_camping', locals: { f: f }
      %br
      = render partial: 'demo_requests/partial_funding', locals: { f: f }
      %br
      = render partial: 'demo_requests/seven_days_to_receive_funds', locals: { f: f }
      %br
      = render partial: 'demo_requests/social_outreach', locals: { f: f }

      %div.inline
        = link_to '#', class: "btn btn-gray", id: "previous", style: "margin:20px 0 0;float:left; border-radius: 5px; width: 110px; background: #8e8e8e;" do
          ◄ PREVIOUS

        = f.submit 'FINISH ►', class: "btn btn-primary", id: "project-submit", style: "margin:20px 0 0;float:right; border-radius: 5px; width: 230px;"

.span4
  .well.without-title{style: "margin-top: 75px;"} 
    .box-content
      %h5.label-green{style: "margin-bottom: 7px;"} NOT READY FOR A DEMO YET?
      = link_to 'Request More Information ►', contact_pages_path

    .box-content
      %h5.label-green{style: "margin-bottom: 7px;"} ARE YOU A DONOR?
      = link_to 'View Fundraising Projects Here ►', pricing_pages_path


= javascript_include_tag "demo_request"