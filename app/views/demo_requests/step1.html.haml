#step1
  %h4 Tell us about you.
  %br
  .row
    .span3.well-half
      = f.label :first_name, class: "label-green" do
        First Name*
        %span.error-container
      = f.text_field :first_name, class: 'full-with'
    .span3.well-half
      = f.label :last_name, class: "label-green" do
        Last Name*
        %span.error-container
      = f.text_field :last_name, class: 'full-with'

  %div
    = f.label :organization, class: "label-green" do
      %span.error-container
      Organization name*
    = f.text_field :organization, class: 'full-with'

  %div
    = f.label :email, class: "label-green" do
      %span.error-container
      Email address*
    = f.email_field :email, class: 'full-with'

  .row
    .span3.well-half
      = f.label :phone, class: "label-green" do
        Phone number*
        %span.error-container
      = f.text_field :phone, id: "user_pass", class: 'full-with'

  %div.inline
    = link_to '#', id: "next-step" do
      .btn{ style: 'margin:0; width:235px;'}
        Next Step â–º
