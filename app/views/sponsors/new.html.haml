.container
  .row-fluid.show-content
    .span8
      %h4.title{:style => "border-bottom: 6px solid #48C94C; padding-bottom: 10px;"} CHECKOUT
      .project-location
        %h4{:style => "color: #48C94C;"}= @project.title
        %div{:style => 'font-family:"Proxima Nova";  margin-bottom: 15px;'}
          = image_tag "marker.jpg", :class => 'marker', :style => 'float:none;'
          = @project.address
          = @project.city
          = @project.state
          = @project.zip

    .span4.sidebar
      %h4 BECOME A SPONSOR
      .well
        %h3{:style => "font-size:20px;letter-spacing:normal;color:#70bf4c;line-height:100%;margin:0;font-family:'Proxima Nova';"} PROJECT SPONSORSHIP
        %p{:style => "font:normal 12px/18px 'Proxima Nova', arial, sans-serif;color:#403e37;margin-bottom:40px;"} We canâ€™t do this alone. Do your part, by becoming a project sponsor. URUUT Partner-Funding depends on individual contributors as well as project sponsorship from businesses and corporate and family foundations. Click the button below to get more details and become a project sponsor.
        = link_to new_project_sponsor_path(@project.id), :class => 'btn', :style => 'margin-top:10px;' do
          Become A Sponsor
          %span

    = form_for(@sponsor, :url => project_sponsors_path, :html => {:class => "span8 well", :style => "margin-left: 0;", :multipart => true, method: 'POST'}) do |f|
      = label_tag :project_sponsor_name do
        CHOOSE YOUR SPONSORSHIP LEVEL
      = select :project_sponsor, :level_id, options_for_select(sponsor_option(@project.id)), :required => true, :size => 17
      %h4 SPONSOR INFORMATION
      %div
        = f.label :name, "Business OR ORGANIZATION NAME*"
        = text_field :project_sponsor, :name, :required => true, :size => 45
      %div
        = f.label :mission do
          BUSINESS OR ORGANIZATION'S LOGO*
        / = image_tag(@project_sponsor.logo_url) unless @project_sponsor.logo.nil?
        / = f.text_field :remote_logo_url
      %div
        = f.label :mission do
          MISSION STATEMENT / ABOUT*
          %span.italic (275 characters remaining)
        = text_area :project_sponsor, :mission, :required => true, :style => "height: 186px; width: 602px;"
      %div{:style => "border-top: solid 1px #a5a5a5; padding-top: 25px"}
        = f.label :payment_type do
          PREFERRED PAYMENT METHOD*
          %span.italic (max 45 days)
        = f.select :payment_type, options_for_select(Sponsor::PAYMENT), :id => "payment_type", :required => true, :size => 17
      %div#credit-card{:style => "float: left;"}
        %div
          = f.label :card_name, "NAME AS IT APPERS ON CARD*"
          = f.text_field :card_name, :size => 45
        %div{:style => "float: left;"}
          = f.label :card_number, "CARD NUMBER*"
          = f.text_field :card_number, :size => 45
        %div{:style => "float: left; margin-right: 60px;"}
          = f.label :cvc, "CVC*"
          = f.text_field :cvc, :size => 5
        %div{:style => "float: left;"}
          = f.label :card_expiration, "CARD EXPIRATION (MM/YYYY)*"
          = f.text_field :month, :size => 5, :style => "float: left; margin-right: 15px;"
          = f.text_field :years, :size => 5, :style => "float: left;"
      %div#wire-transfer{:style => "display: none; float: left;"}
        %div
          = f.label :name, "CONTACT NAME*"
          = f.text_field :name, :size => 45
        %div
          = f.label :email, "CONTACT EMAIL*"
          = f.text_field :email, :size => 45
        %div
          = f.label :phone, "CONTACT PHONE NUMBER*"
          = f.text_field :phone, :size => 15
      %div{:style => "float: left;"}
        = f.submit "Save And Continue", :class => "btn", :id => "project-submit"

%script{:src => "http://cdn.leafletjs.com/leaflet-0.4/leaflet.js"}
%script{:src => "http://maps.stamen.com/js/tile.stamen.js?v1.2.1"}

:javascript
  $(document).ready(function(){
    $("#sponsor_payment_type").change(function(){
      if(this.value == "Credit Card"){
        $("#wire-transfer").hide();
        $("#credit-card").show();
      }else{
        $("#wire-transfer").show();
        $("#credit-card").hide();
      }
    });
  });
