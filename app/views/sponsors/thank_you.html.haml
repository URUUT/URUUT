.container
  .row-fluid{style: "margin-top: 30px;"}
    .span9
      %h4.tittle THANK YOU!
      %h4.label-green Congratulations!
      %p You are now an official sponsor to #{@project.title}. Now it's time to spread the word
      %div
        = link_to image_tag("fb-share.png",style: "width: 150px"), "javascript:shareFb()", style: "display: block; float: left;"
        = link_to image_tag("tw-share.png", style: "width: 150px"), "https://twitter.com/share", "data-url" => root_url, "target" => "blank", style: "margin-left: 2%; display: block; float: left;"
        = link_to image_tag("ml-share.png", style: "width: 150px"), "javascript:void(0)", style: "margin-left: 2%; display: block; float: left;", class: "cs_import"
        %span.link-short{:style => "font-weight:bolder; font-size: 14px; margin-left: 2%"}
          = @project.bitly
        %textarea#contact_list{:style => "display:none", :name => "email_recepient"}
    .span3.pull-right.messages-content
      %h4.title DETAILS
      .well.pull-left{style: "margin-left: 0;"}
        %h5.label-green PAYMENT AMOUNT
        %p #{number_to_currency(@cost, precision: 0)}
        %br
        %h5.label-green YOUR BENEFITS
        %h6 #{@level} SPONSOR
        %ul{:style => "margin: 0"}
        - @benefits.each do |benefit|
          %li #{benefit.name}

:javascript
  var project_id = "#{@project.id}";
  var shareFb = function(){
    window.open('https://www.facebook.com/sharer/sharer.php?u=' + location.href, 'sharer', 'width=626,height=436');
    };

  var owner_email, owner_first_name, owner_last_name;
  var appendInTextarea = false;
  var emailSep = ", ";
  function sendEmail(contacts, source, owner) {
    var contact, name, email, entry;
    var emails = [];
    var textarea = document.getElementById('contact_list');

    for (var i = 0; i < contacts.length; i++) {
      contact = contacts[i];
      name = contact.fullName();
      email = contact.selectedEmail();
      entry = name + "<" + email +">";
      if (emails.indexOf(entry) < 0) {
        emails.push(entry);
      }
    }

    $("#contact_list").val("");

    $.ajax({
      type: "POST",
      url: "/share_email_by_sponsor",
      data: {emails: emails.join(emailSep), project_id: project_id}
    })

  }


  var csPageOptions = {
    domain_key:"3E6CHQNSGA7WFNM7ATLZ", // default for 127.0.0.1, please change it
    textarea_id:"contact_list",
    afterSubmitContacts:sendEmail
  };

%script{:src => "https://api.cloudsponge.com/address_books.js"}
