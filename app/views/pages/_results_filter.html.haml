    %p.sections
      CURRENT PROJECTS

      = link_to "View All", "#", :class => 'view-all'
    .project-all
      .loader{:style => "margin-left: 35%; font-weight: bold; font-size: 16px;top: 60px;position: absolute;z-index: 1000;  display:none"}
        Loading..
