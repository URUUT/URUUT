:css
  .box-content h5, h5.label-green{
    font-family: 'Proxima Nova Bold';
    letter-spacing: 1pt;
  }
  .box-content p{
    font-size: 12pt;
  }
  .span8 h1{
    font-family: 'Proxima Nova Bold';
    font-size: 22pt;
    margin-top: 55px;
    border-bottom: 1pt solid #d3d3d3;
    color: #81c263;
    padding-bottom: 5px;
  }
  .span8 h2{
    margin-top: 30px;
    font-family: 'Proxima Nova';
    text-transform: none;
    font-size: 22pt;
  }
  .span8 h4{
    color: #81c263;
    text-transform: none;
    font-size: 14pt;
    letter-spacing: 1pt;
    margin-bottom: 5px;
  }
  .span8 p{
    color: #8e8e8e;
    font-size: 10pt;
    margin-bottom: 20px;
  }
  .span8 .experts{ display: inline-block; height: 150px; width: 300px;}
  .span8 .experts p{ margin-bottom: 0px; }
  .experts p b{
    font-size: 11pt;
    text-decoration: underline;
  }
  .experts img{ height: 85px; float: left; margin-right: 10px; }

  .social-links .fb, .social-links .tw {
    display: inline-block;
    height: 13px;
    color: #fff;
    text-decoration: none!important;
    padding: 8pt 0 6pt 24pt;
    font-weight: bold;
    line-height: 10pt;
  }
  .social-links .fb {
    background: url("/assets/facebook.png") top left no-repeat;
    background-position: 13px;
    background-size: 8px;
    margin-right: 10px;
  }

  .social-links .tw {
    background: url("/assets/twitter.png") top left no-repeat;
    background-position: 10px;
    background-size: 15px;
  }

  .btn-tw, .btn-fb {
    width: 180px;
    background: #486399;
    border-radius: 5px;
  }
  .btn-tw { background: #4090ff; margin-bottom: 15px; }
  .social-links a:hover{ color: #fff; text-decoration: none; }

