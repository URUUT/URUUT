- if projects  - projects.each do |p|    - if p.live == true && p.deleted == false      %div.project        = image_tag "#{p.image.url(:original)}", :class => "project-image"        .content          .cont-desc            %h4= link_to p.title, project_path(p.id)            %p.short-description= p.short_description          .location.clearfix            %span #{p.city}, #{p.state}            = image_tag "pin.png", :class => "marker"                .funding          %div{:class => "progressbar#{p.id}"}                      %ul            %li.funded              %p                = number_to_currency(amount_funded(p.id), :precision => 0)                %span of                = get_currency(p.goal)              %h5 Funded            %li.days-left              %p.days #{time_left(p.duration, p.approval_date)}              %h5.time-left Days Left        :javascript          $('.progressbar#{p.id}').progressbar({          value: #{percent_funded(p.id)}          });					- else  %h3 Sorry, No Projects To Show