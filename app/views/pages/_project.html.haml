- if projects  - projects.each do |p|    - if p.live == 1      %div.project        = link_to image_tag("#{p.large_image}", :class => "project-image"), project_path(p.id)        .content          .cont-desc            %h3= link_to p.title, project_path(p.id)            %p.short-description= p.about          .location.clearfix            = image_tag "pin.png", :class => "marker"            %span #{p.city}, #{p.state}              .funding          %div{:class => "progressbar#{p.id}"}                    %ul            %li.funded              %p                = number_to_currency(amount_funded(p.id), :precision => 0)                %span of                = get_currency(p.goal)              %h5 Funded            %li.days-left              %p.days #{time_left(p.duration, p.approval_date)}              %h5.time-left Days Left        - if controller_name == 'users'          %h5{:style => "text-align:center"}= link_to "Project Admin Panel", project_admin_project_url(p.id)        :javascript          $(function() {            updateProgressbar(#{p.id}, #{percent_funded(p.id)});          });          					- else  %h3 Sorry, No Projects To Show