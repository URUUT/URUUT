- if projects  - projects.each do |p|    - if p.live == 1      %div.project        .project-img          = link_to image_tag("#{p.large_image}", :class => "project-image"), project_path(p.id)          .project-img-layer.project-create            %h2 Success!            - if time_left(p.duration, p.approval_date) <= 0              %input#success-create{:name => "success", :type => "hidden", :value => "success", class: "success"}        .content          .cont-desc            %h3= link_to p.title, project_path(p.id)            %p.short-description= p.about          .location.clearfix            = image_tag "pin.png", :class => "marker"            %span #{p.city}, #{p.state}            - if p.organization_classification.eql?("170(c)(1)") || p.organization_classification.eql?("501(c)(3)")              %span.pull-right                = image_tag 'td-logo.png', class: "tax-deductible", "data-toggle" => "tooltip", title: "Donation Are Tax Deductable"        .funding          %div{:class => "progressbar#{p.id}"}          %ul            %li.funded              %p                = number_to_currency(totalsponsor(p), :precision => 0)                %span of                = get_currency(p.goal)              %h5 Funded            %li.days-left              %p.days #{time_left(p.duration, p.approval_date)}              %h5.time-left Days Left        - if controller_name == 'users'          .project-admin-panel            = link_to "Project Admin Panel", project_admin_project_url(p.id)            = image_tag 'arrow.png', :style => "width: 10px; height: 10px;"        :javascript          $(document).ready(function() {            $('#projects-created').change(function(){                if ($(this).val() == "Funding Completed"){                  $('.project-create .success').parent().addClass("success");                }                else{                  $(".project-create").removeClass("success");                }              }            )          })          $(function() {            updateProgressbar(#{p.id}, #{percentage_sponsor(p)});            $('.progressbar#{p.id} > div').css({ 'background': '#70bf4c' });            $('.tax-deductible').tooltip({              placement: "top",              trigger: "hover"            });          });- else  %h3 Sorry, No Projects To Show