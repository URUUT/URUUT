%div{:class => "hero-unit"}
  %h1 Heading
  %p Tagline
  %p
    %a{:class => "btn btn-primary btn-large"} Learn more

%h2{:style => "border-bottom:1px solid #ccc;margin-bottom:30px;"} Recent Projects

- if @projects
  - @projects.each do |p|
    - if p.live == true && p.deleted == false
      %div.project.well{:style => "width:230px;height:380px;padding:10px;float:left;margin:0 20px 20px 0;overflow:hidden;"}
        .location
          %span{:style => "float:left;text-transform:capitalize;"}#{p.city}, #{p.state}
          = image_tag "marker.jpg", :style => "float:right;"
        = image_tag("#{p.image.url(:original)}", :style => "width:230px !important;height:125px !important;")
        .cont-desc{:style => "height:120px;text-overflow:ellipsis;overflow:hidden;width:100%;"}
          %h3{:style => "width:230px;word-wrap:break-word;text-transform:capitalize;margin:0;"}
            = link_to p.title, project_path(p.id)
          %p.short-description{:style => "text-overflow:ellipsis;overflow:hidden;width:100%;"}= p.short_description

        %h5 Funded:
        %p{:style => "margin-bottom:5px;"}
          = number_to_currency(amount_funded(p.id), :precision => 0)
          of
          = get_currency(p.goal)

        %div{:style => "height:20px;margin-bottom:5px;", :class => "progressbar#{p.id}"}
        %h5{:style => "display:inline-block"} Time Left
        %p{:style => "display:inline-block"} #{time_left(p.duration).to_i} Days
		
        - if current_user
          - if p.user_id == current_user.id
            = link_to "Edit Project", edit_project_url(p.id)
        :javascript
          $('.progressbar#{p.id}').progressbar({
          value: #{percent_funded(p.id)}
          });
					
- else
  %h3 Sorry, No Projects To Show
