.row
  .span9
    %img{:style => "width:100%;height:400px;"}
  .span3
    %ul
      %li Projects
      %li How it works
      %li Create A Project

.recent
  %h2 Recent Projects

  - if @projects
    - @projects.take(4).each do |p|
      - if p.live == true && p.deleted == false
        %div.project
          .location
            %span #{p.city}, #{p.state}
            = image_tag "marker.jpg", :class => "marker"
          = image_tag "#{p.image.url(:original)}", :class => "project-image"

          .cont-desc
            %h3= link_to p.title, project_path(p.id)
            %p.short-description= p.short_description

          %h5 Funded:
          %p.funded{:style => "margin-bottom:5px;"}
            = number_to_currency(amount_funded(p.id), :precision => 0)
            of
            = get_currency(p.goal)

          -#%div.progressbar#{p.id}
          %h5.time-left Time Left
          %p.days #{time_left(p.duration).to_i} Days
      
          - if current_user
            - if p.user_id == current_user.id
              = link_to "Edit Project", edit_project_url(p.id)
          :javascript
            $('.progressbar#{p.id}').progressbar({
            value: #{percent_funded(p.id)}
            });
            
  - else
    %h3 Sorry, No Projects To Show

.clearfix

